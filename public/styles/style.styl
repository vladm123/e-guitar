html
	background-color: #eee

body
	background-color: #eee
	margin: 0
	margin-left: auto
	margin-right: auto
	min-height: 600px
	overflow: hidden
	padding: 50px
	text-align: center
	
body > h1
	color: #ccc
	font-family: Lato, Helvetica, Arial, sans-serif
	font-size: 75px
	font-weight: 300
	margin: 15px
	margin-left: auto
	margin-right: auto
	text-align: left
	text-shadow 0px 0px #ddd
	width:800px

body > hr
	background-color: #ddd
	border: 0
	height: 1px
	margin-left: auto
	margin-right: auto
	margin-top:25px
	width:100%	
	
body > div	
	margin-left: auto
	margin-right: auto
	width: 800px

body > div > div
	background-color: #fff
	box-shadow 0 0 5px #ddd
	margin-top: 25px
	opacity: 0.9
	overflow-x: hidden
	padding: 15px
	width: 800px

body > div.all > div
	display: none
	
body > div > div > h2
	clear: both
	color: #333
	cursor: pointer
	float: left
	font-family: Lato, Helvetica, Arial, sans-serif
	font-size: 50px
	font-weight: 300
	margin: 0
	padding: 0
	text-shadow 0px 0px #eee
	white-space: nowrap

body > div > div > p
	clear: both
	color: #666
	float: left
	font-family: Lato, Helvetica, Arial, sans-serif
	font-size: 25px
	font-weight: 300
	margin: 0
	padding: 0
	text-shadow 0px 0px #eee
	white-space: nowrap
	
body > div.project > div > form > p > input.name
	border: 0
	clear: both
	color: #333
	float: left
	font-family: Lato, Helvetica, Arial, sans-serif
	font-size: 50px
	font-weight: 300
	margin: 0
	padding: 0
	text-shadow 0px 0px #eee
	width:800px

body > div.project > div > form > p > input.description
	border: 0
	color: #666
	float: left
	font-family: Lato, Helvetica, Arial, sans-serif
	font-size: 25px
	font-weight: 300
	margin: 0
	padding: 0
	text-shadow 0px 0px #eee
	width:800px

body > div.project > div > form > p > input.add
body > div.project > div > form > p > input.edit
body > div.project > div > form > p > input.remove
body > div.project > div > form > p > input.close
	background-color: #fff
	border: 0
	cursor: pointer
	float: right
	font-family: Lato, Helvetica, Arial, sans-serif
	font-size: 25px
	font-weight: 400
	margin: 0
	margin-bottom:-15px
	margin-right:-15px
	margin-left:15px
	padding: 5px
	position: relative
	text-shadow 0px 0px #eee
	transition: all 0.1s
	-webkit-transition: all 0.1s
	white-space: nowrap
	display:none
	
body > div.project > div > form > p > input.add:hover
body > div.project > div > form > p > input.edit:hover
body > div.project > div > form > p > input.remove:hover
body > div.project > div > form > p > input.close:hover
	color: #fff


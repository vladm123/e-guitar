	color: #3c0
	
body > div.project > div > form > p > input.edit
	color: #666

body > div.project > div > form > p > input.remove
	color: #f30

body > div.project > div > form > p > input.close
	color: #999

body > div.project > div > form > p > input.add:hover
	background-color: #3c0

body > div.project > div > form > p > input.edit:hover
	background-color: #666

body > div.project > div > form > p > input.remove:hover
	background-color: #f30

body > div.project > div > form > p > input.close:hover
	background-color: #999
	
	

	
	
body > div > div > aside
	background-color: #333
	color: #fff
	float: left
	font-family: Lato, Helvetica, Arial, sans-serif
	font-size: 15px
	font-weight: 300
	margin: 0
	margin-left: -15px
	margin-top: -15px
	padding: 5px
	text-shadow 0px 0px #eee
	white-space: nowrap
	
body > div > div > div.task
	background-color: transparent
	border-bottom-left-radius: 100%
	border-bottom-right-radius: 100%
	border-top-left-radius: 100%
	border-top-right-radius: 100%
	color: #3c0
	cursor: pointer
	font-family: Lato, Helvetica, Arial, sans-serif
	font-size: 40px
	font-weight: 400
	height: 50px
	margin-left:750px
	margin-top:-70px
	position: absolute
	transition: all 0.1s
	-webkit-transition: all 0.1s
	width: 50px
	
body > div > div > div.task:hover
	background-color: #3c0
	color: #fff
	
body > div > div > div.tasks
	clear:both
	height: 100px
	position: relative
	background-image: url('strings.png')
	
body > div > div > div.tasks > div
	border-bottom-left-radius: 100%
	border-bottom-right-radius: 100%
	border-top-left-radius: 100%
	border-top-right-radius: 100%
	box-shadow 0 0 5px #eee
	color: #fff
	font-weight: bold
	overflow: hidden
	position: absolute
	transition: all 0.1s
	-webkit-transition: all 0.1s
	
body > div > div > div.tasks > div.done
	background-color: #3c0
	border: 4px solid #3c0
	text-shadow 0px 0px #2b0
	
body > div > div > div.tasks > div.progress
	background-color: transparent
	border: 4px solid #f90
	cursor: pointer
	text-shadow 0px 0px #e80
	
body > div > div > div.tasks > div.progress:hover
	background-color: #3c0
	border: 4px solid #3c0
	text-shadow 0px 0px #2b0

body > div > div > div.tasks > div.done:hover
	background-color: #3c0

